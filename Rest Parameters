//Rest parameters
//The rest parameter syntax allows a function to accept an indefinite number of arguments as an array

function sum(...theArgs) 
{
    let total = 0;
    for (const arg of theArgs) 
    {
      total = total + arg;
    }
    return total;
}
  
  console.log(sum(10, 20, 30));
  // output: 60
  
  console.log(sum(10, 20, 30, 40));
  // output: 100
